# TrustAgency - Environment Configuration
# This file contains all environment variables used in the application
# Copy this file to .env and update values for your environment

# ===== Application Environment =====
# Options: development, production, testing
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ===== Database Configuration =====
# PostgreSQL connection string
DATABASE_URL=postgresql://trustagency:trustagency@db:5432/trustagency
DB_PASSWORD=trustagency
DB_HOST=db
DB_PORT=5432
DB_NAME=trustagency
DB_USER=trustagency

# ===== Redis Configuration =====
# Redis connection details
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ===== Celery Configuration =====
# Celery broker and result backend
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ===== API Configuration =====
# API server settings
API_HOST=0.0.0.0
API_PORT=8001
API_TITLE=TrustAgency API
API_VERSION=1.0.0
API_DESCRIPTION=TrustAgency Platform API

# ===== Security Configuration =====
# JWT and session settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== CORS Configuration =====
# Allowed origins for CORS
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8000,http://localhost:8001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization

# ===== Email Configuration (Optional) =====
# SMTP settings for sending emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@trustagency.com
SMTP_TLS=true

# ===== AWS Configuration (Optional) =====
# S3 and other AWS services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=trustagency-bucket

# ===== OpenAI Configuration (Optional) =====
# OpenAI API settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# ===== Docker Configuration =====
# Docker-specific settings
COMPOSE_PROJECT_NAME=trustagency
DATA_PATH=/var/lib/trustagency
TZ=Asia/Shanghai

# ===== Feature Flags =====
# Feature toggles
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_PROFILING=false

# ===== Monitoring & Logging =====
# Monitoring and logging configuration
SENTRY_DSN=
LOG_FORMAT=json
PROMETHEUS_ENABLED=false
